<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_top_curve_bg"
        android:orientation="vertical">

        <com.contusfly.views.CustomTextView
            style="@style/ChatTag_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:text="@string/remove_chat_tag_title"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_15"/>

        <com.contusfly.views.CustomTextView
            android:id="@+id/remove_chat_tag"
            style="@style/ChatTag_medium_add_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_40"
            android:gravity="center"
            android:text="@string/action_remove"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_15"
            android:textColor="@color/color_red"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/margin_16"/>

    </LinearLayout>

</LinearLayout>