<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_call_incoming"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="gone">

    <ImageView
        android:id="@+id/image_call_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/margin_50"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_answer" />

    <ImageView
        android:id="@+id/image_call_up_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_call_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_up_arrow_2" />

    <ImageView
        android:id="@+id/image_call_up_arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_call_up_arrow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_up_arrow_1" />

    <ImageView
        android:id="@+id/image_call_down_arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_call_down_arrow2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_4"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_down_arrow_1" />

    <ImageView
        android:id="@+id/image_call_down_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_call_reject"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_16"
        android:alpha="0.5"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_down_arrow_2" />

    <ImageView
        android:id="@+id/image_call_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_call_reject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.contus.call.RippleBackgroundView
            android:id="@+id/ripple_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            app:rb_color="@color/color_white"
            app:rb_duration="2000"
            app:rb_radius="20dp"
            app:rb_rippleAmount="4"
            app:rb_scale="3"
            app:rb_strokeWidth="10dp"
            app:rb_type="strokeRipple">

            <ImageView
                android:id="@+id/btn_call_swipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:padding="@dimen/padding_10"
                android:src="@drawable/ic_call_swipe_button" />

        </com.contus.call.RippleBackgroundView>

    </LinearLayout>

</RelativeLayout>