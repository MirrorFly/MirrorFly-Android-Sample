<TableLayout android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableRow style="@style/keyboard_row">

        <TextView
            android:id="@+id/t9_key_1"
            style="@style/keyboard_number_button"
            android:layout_height="match_parent"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_one"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_2"
            style="@style/keyboard_number_button"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_two"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_3"
            style="@style/keyboard_number_button"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_three"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        style="@style/keyboard_row"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/t9_key_4"
            style="@style/keyboard_number_button"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_four"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_5"
            style="@style/keyboard_number_button"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_five"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_6"
            style="@style/keyboard_number_button"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_six"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        style="@style/keyboard_row"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/t9_key_7"
            style="@style/keyboard_number_button"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_seven"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_8"
            style="@style/keyboard_number_button"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_eight"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/t9_key_9"
            style="@style/keyboard_number_button"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_nine"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>
    </TableRow>

    <FrameLayout
        style="@style/keyboard_row"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/t9_key_0"
            style="@style/keyboard_number_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/ic_keypad_background"
            android:text="@string/number_zero"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/t9_key_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:paddingStart="5dp"
                android:paddingTop="15dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/ic_delete_icon"
                android:contentDescription="@string/action_remove" />
        </LinearLayout>

    </FrameLayout>
</TableLayout>