<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/StatusList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:paddingStart="@dimen/padding_19"
        android:paddingTop="@dimen/padding_25"
        android:paddingEnd="@dimen/padding_19"
        android:paddingBottom="@dimen/margin_0"
        android:textColor="@color/text_black_dark"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_description"
        style="@style/StatusList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:paddingStart="@dimen/padding_19"
        android:paddingTop="@dimen/padding_5"
        android:paddingEnd="@dimen/padding_19"
        android:paddingBottom="@dimen/margin_0"
        android:textColor="@color/text_black_light"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

</androidx.constraintlayout.widget.ConstraintLayout>