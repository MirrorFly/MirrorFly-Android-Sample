<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:background="@color/color_attachment"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_20"
    android:paddingBottom="@dimen/padding_20">


    <LinearLayout
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/camera_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_chat_camera">

        </ImageView>

        <TextView
            android:id="@+id/text_chat_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="3.8dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/label_camera"
            android:textColor="@color/color_attachment_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/video_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_chat_video">

        </ImageView>

        <TextView
            android:id="@+id/text_chat_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="3.8dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/label_video"
            android:textColor="@color/color_attachment_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gallery_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_chat_gallery">

        </ImageView>

        <TextView
            android:id="@+id/text_chat_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="3.8dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/label_gallery"
            android:textColor="@color/color_attachment_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/location_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_chat_location">

        </ImageView>

        <TextView
            android:id="@+id/text_chat_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="3.8dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/label_location"
            android:textColor="@color/color_attachment_white" />

    </LinearLayout>

</LinearLayout>