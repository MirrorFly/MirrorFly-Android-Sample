<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_img_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/image_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/row_img_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_img_item"
        app:srcCompat="@drawable/ic_play_video_blue_fill" />

    <ImageView
        android:id="@+id/img_audio_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/row_img_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_img_item"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".35"
        app:srcCompat="@drawable/ic_media_record" />
</androidx.constraintlayout.widget.ConstraintLayout>