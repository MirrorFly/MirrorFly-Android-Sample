<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".fragments.NotificationsFragment">

    <RelativeLayout
        android:id="@+id/layout_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
       android:padding="@dimen/padding_25">

        <com.contusfly.views.CustomTextView
            android:id="@+id/text_about_us"
            style="@style/TextMediumRegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/image_about_us"
            android:text="@string/about_us" />

        <ImageView
            android:id="@+id/image_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_right_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@color/color_list_divider_color" />

    <RelativeLayout
        android:id="@+id/layout_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/padding_25">

        <com.contusfly.views.CustomTextView
            style="@style/TextMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/image_contact_us"
            android:gravity="start|center_vertical"
            android:text="@string/contact_us" />

        <ImageView
            android:id="@+id/image_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_right_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@color/color_list_divider_color" />

    <RelativeLayout
        android:id="@+id/layout_terms_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/padding_25">

        <com.contusfly.views.CustomTextView
            android:id="@+id/text_terms_privacy_policy"
            style="@style/TextMediumRegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/terms_and_privacy_policy" />

        <TextView
            android:id="@+id/txt_terms_and_conditions"
            style="@style/TextSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_terms_privacy_policy"
            android:textColor="?attr/blue_color"
            android:textColorLink="?attr/blue_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@color/color_list_divider_color" />
</LinearLayout>