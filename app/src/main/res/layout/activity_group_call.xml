<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caller_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/call_users_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black_transparent"
        android:visibility="visible" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/view_video_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_call_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/text_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="center"
            android:src="@drawable/logo_group_call"
            android:contentDescription="@string/title_image" />

        <TextView
            android:id="@+id/text_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_app_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_12"
            android:gravity="center"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textColor="@color/colorDivider"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/text_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_call_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_medium"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/text_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_group_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_10"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:textAlignment="center"
            android:textColor="@color/colorDivider"
            android:textSize="@dimen/text_size_14" />

        <com.contusfly.views.CircularImageView
            android:id="@+id/img_profile_image"
            android:layout_width="@dimen/call_profile_image_width"
            android:layout_height="@dimen/call_profile_image_width"
            android:layout_below="@+id/text_caller_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:src="@drawable/ic_grp_bg" />

        <TextView
            android:id="@+id/text_audio_call_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:layout_below="@+id/img_profile_image"
            android:textSize="@dimen/text_size_16"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_call_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_group_overlay"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_attend_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_50"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            tools:text="@string/group_call" />

        <TextView
            android:id="@+id/text_call_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_attend_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            tools:text="@string/start_timer" />

        <TextView
            android:id="@+id/text_call_attend_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_call_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_10"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textColor="@color/colorDivider"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_video_muted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_video_muted_overlay" />

        <ImageView
            android:id="@+id/image_audio_muted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:contentDescription="@null"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_video_call_audio_mute_overlay" />

        <TextView
            android:id="@+id/text_call_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textColor="@color/color_white_85"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_call_incoming"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_20"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/image_call_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_50"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_answer" />

        <ImageView
            android:id="@+id/image_call_up_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_call_answer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_up_arrow_2" />

        <ImageView
            android:id="@+id/image_call_up_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_call_up_arrow2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_up_arrow_1" />

        <ImageView
            android:id="@+id/image_call_down_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_call_down_arrow2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_4"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_down_arrow_1" />

        <ImageView
            android:id="@+id/image_call_down_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_call_reject"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_16"
            android:alpha="0.5"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_down_arrow_2" />

        <ImageView
            android:id="@+id/image_call_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_call_reject" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.contus.call.RippleBackgroundView
                android:id="@+id/ripple_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:rb_color="@color/color_white"
                app:rb_duration="2000"
                app:rb_radius="20dp"
                app:rb_rippleAmount="4"
                app:rb_scale="3"
                app:rb_strokeWidth="10dp"
                app:rb_type="strokeRipple">

                <ImageView
                    android:id="@+id/btn_call_swipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/padding_10"
                    android:src="@drawable/ic_call_swipe_button" />

            </com.contus.call.RippleBackgroundView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_call_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/caller_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_call_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_20"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center_horizontal"
            android:text="@string/call_retry_info"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_call_retry"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_10"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center_horizontal"
            android:text="@string/action_cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            app:drawableTopCompat="@drawable/ic_group_call_cancel" />

        <TextView
            android:id="@+id/text_call_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_call_retry"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_50"
            android:layout_marginBottom="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_10"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center_horizontal"
            android:text="@string/action_call_again"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            tools:ignore="RelativeOverlap"
            app:drawableTopCompat="@drawable/ic_group_video_call_again" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/call_options_up_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_30"
        android:contentDescription="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_call_options_up_arrow" />

    <LinearLayout
        android:id="@+id/layout_call_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_group_user_info_layout"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_45"
            android:layout_marginEnd="@dimen/margin_45"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center">

            <ImageButton
                android:id="@+id/image_mute_audio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/selector_call_audio_mute" />

            <ImageButton
                android:id="@+id/image_switch_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/selector_video_call_camera_switch"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/image_mute_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/selector_call_video_state" />

            <ImageButton
                android:id="@+id/img_speaker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/selector_call_speaker" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/image_end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_group_call_end_icon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_group_overlay">

        <ImageButton
            android:id="@+id/image_minimize_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_10"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="@dimen/margin_10"
            app:srcCompat="@drawable/ic_minimize_group_call" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_12"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"
        android:contentDescription="@null"
        android:padding="@dimen/margin_10"
        app:srcCompat="@drawable/ic_add_user_in_call" />

    <RelativeLayout
        android:id="@+id/layout_pip_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/group_pip_background"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:src="@drawable/logo_group_pip_mode"
            android:contentDescription="@string/title_image" />

        <TextView
            android:id="@+id/text_pip_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_app_info"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_regular"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_12"
            android:paddingEnd="@dimen/padding_12"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/text_call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pip_group_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textColor="@color/pip_call_type"
            android:textSize="@dimen/text_size_11"
            tools:text="@string/audio_call" />

        <ImageView
            android:id="@+id/img_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_call_type"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_mic_off"
            android:contentDescription="@string/title_image" />

        <TextView
            android:id="@+id/text_pip_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_call_status"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="bottom"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_5"
            android:textAlignment="gravity"
            android:textColor="@color/colorDivider"
            android:textSize="@dimen/text_size_12"
            tools:text="00:05" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>